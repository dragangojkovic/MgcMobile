<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MBoxMobile.Views.MainPage"
             Title="">
  <ContentPage.Resources>
    <ResourceDictionary>
      <x:Double x:Key="LogoWidth">0</x:Double>
      <x:Double x:Key="LogoHeight">0</x:Double>
    </ResourceDictionary>
  </ContentPage.Resources>
  <ScrollView>
    <StackLayout Padding="10" BackgroundColor="{StaticResource PageBackground}">
      <Image Source="logo.png" HorizontalOptions="CenterAndExpand" WidthRequest="{DynamicResource LogoWidth}" HeightRequest="{DynamicResource LogoHeight}" Margin="0, 20, 0, 40"/>
      <Grid x:Name="GridButtons" HorizontalOptions="Center" ColumnSpacing="6" RowSpacing="6">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="{DynamicResource ButtonWidth}" />
          <ColumnDefinition Width="{DynamicResource ButtonWidth}" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
      </Grid>
    </StackLayout>
  </ScrollView>
</ContentPage>